<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:id="@+id/layout_main"
    >
<ViewFlipper android:id="@+id/quote"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
<LinearLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff" android:layout_gravity="center">
  <LinearLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#ffffff" android:layout_gravity="center">
  <ImageView android:layout_width="wrap_content" android:id="@+id/imageView1" android:src="@drawable/pharos_logo" android:layout_height="wrap_content"></ImageView>
  
  
	    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
	    			android:layout_width="wrap_content" 
	    			android:text="Where are you sending to?" 
	    			android:id="@+id/txt_country"
	    			android:textColor="#000000"
	    			android:layout_height="wrap_content">
	    </TextView>
	
	    <Spinner 
	    			android:text=""
			       	android:id="@+id/spinner_collection_address"
			       	android:layout_width="fill_parent"
			       	android:layout_height="wrap_content">
	    </Spinner>
	            	
	    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
	    			android:layout_width="wrap_content" 
	    			android:text="How much does it weigh?" 
	    			android:id="@+id/txt_weight" 
	    			android:textColor="#000000"
	    			android:layout_height="wrap_content"> 
	    </TextView> 
	    
	    <Spinner 	android:text="" 
	            	android:id="@+id/spinner_weight"
	            	android:layout_width="fill_parent"
	            	android:layout_height="wrap_content"
	            	android:layout_below="@+id/spinner_collection_address">
	    </Spinner>
	    
	    </LinearLayout>
  
  
	    <RelativeLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#ffffff">
  <Button android:id="@+id/btn_quoteme" android:layout_height="wrap_content" android:text="Get Quote!" android:layout_width="fill_parent"></Button>
 </RelativeLayout>
 	
</LinearLayout>
<LinearLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff">
  
  <ImageView android:layout_width="wrap_content" android:id="@+id/imageView1" android:src="@drawable/pharos_logo" android:layout_height="wrap_content"></ImageView>
 <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawSelectorOnTop="false"
               />
               <Button 	android:id="@+id/btn_back" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:text="Back" 
					android:layout_centerHorizontal="true" 
					android:layout_gravity="center"/>		
  </LinearLayout>
</ViewFlipper>
</LinearLayout>
