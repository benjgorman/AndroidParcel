<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff">
      
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="Where are you sending to?" 
    			android:id="@+id/txt_country" 
    			android:textColor="#000000"
    			android:layout_height="wrap_content">
    </TextView>

    <Spinner 
    			android:text=""
		       	android:id="@+id/spinner_collection_address"
		       	android:layout_width="fill_parent"
		       	android:layout_height="wrap_content">
    </Spinner>
            	
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="\n How much does it weigh?" 
    			android:id="@+id/txt_weight" 
    			android:textColor="#000000"
    			android:layout_height="wrap_content"> 
    </TextView> 
    
    <Spinner 	android:text="" 
            	android:id="@+id/spinner_weight"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_below="@+id/spinner_collection_address">
    </Spinner>

    <TextView 	android:textAppearance="?android:attr/textAppearanceSmall" 
    			android:layout_width="wrap_content" 
    			android:text="\n Please note that 'United Kingdom' does not include the Republic of Ireland or the Channel Islands.\n\n" 
    			android:id="@+id/txt_disclaimer" 
    			android:gravity="center_horizontal"
    			android:textColor="#000000"
    			android:layout_height="wrap_content"> 
    </TextView> 
    
    <Button 	android:id="@+id/btn_quoteme" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="Get Quote!" 
				android:layout_centerHorizontal="true" 
				android:layout_gravity="center"/>
				
</LinearLayout>

