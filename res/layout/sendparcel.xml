<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:id="@+id/layout_main"
    >
	<ViewFlipper 
	android:id="@+id/details"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">  

		<LinearLayout
		android:id="@+id/RLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		>
			<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff">
			
				<TextView
					android:id="@+id/lblTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Title"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
				<EditText 
				android:layout_height="wrap_content" 
    			android:layout_width="fill_parent" 
    			android:textSize="14sp" 
    			android:id="@+id/txtTitle" 
   				android:layout_alignParentTop="true" 
    			android:layout_toRightOf="@+id/lblTitle"
    			android:layout_centerHorizontal="true">
    			</EditText>
    			
    			<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
    			<TextView
					android:id="@+id/lblForename"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Forename"
					android:layout_weight="1"
					
      			/>
      			<TextView
					android:id="@+id/lblSurname"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Surname"
					android:layout_weight="1"
					
      			/>
    			</LinearLayout>
    			
    			<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
				
					<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtForename"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    			
	    			<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtSurname" 
	    			android:layout_weight="1">
	    			</EditText>
	    			
				</LinearLayout>
    			
    			<TextView
					android:id="@+id/lblPhone"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Phone Number"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
      			<EditText 
				android:layout_height="wrap_content" 
    			android:layout_width="fill_parent" 
    			android:textSize="14sp" 
    			android:id="@+id/txtPhone" 
   				android:layout_alignParentTop="true" 
    			android:layout_toRightOf="@+id/lblPhone"
    			android:layout_centerHorizontal="true">
    			</EditText>
    			<TextView
					android:id="@+id/lblEmail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Email Address"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
      			<EditText 
				android:layout_height="wrap_content" 
    			android:layout_width="fill_parent" 
    			android:textSize="14sp" 
    			android:id="@+id/txtEmail" 
   				android:layout_alignParentTop="true" 
    			android:layout_toRightOf="@+id/lblEmail"
    			android:layout_centerHorizontal="true">
    			</EditText>
    			<TextView
					android:id="@+id/lblCollection"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Collection Address"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
    			<Spinner android:text="No Saved Addresses"
            	android:id="@+id/spinner_collection_address"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content">
            	</Spinner>
    </LinearLayout>
</LinearLayout>
<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff">
			
				<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
    			<TextView
					android:id="@+id/lblName"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Name"
					android:layout_weight="1"
					
      			/>
      			<TextView
					android:id="@+id/lblNumber"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Number"
					android:layout_weight="1"
					
      			/>
    			</LinearLayout>
    			
    			<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
				
					<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtName"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    			
	    			<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtPhone" 
	    			android:layout_weight="1">
	    			</EditText>
	    			
				</LinearLayout>
    			
    			<TextView
					android:id="@+id/lblCollection"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Recepient Address"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
    			<Spinner android:text="No Saved Addresses"
            	android:id="@+id/spinner_recepient_address"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content">
            	</Spinner>
            	     			
      			<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
    			<TextView
					android:id="@+id/lblWeight"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Weight"
					android:layout_weight="1"
					
      			/>
      			<TextView
					android:id="@+id/lblLength"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Length"
					android:layout_weight="1"
      			/>
      			<TextView
					android:id="@+id/lblWidth"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Width"
					android:layout_weight="1"
					
      			/>
      			<TextView
					android:id="@+id/lblHeight"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Height"
					android:layout_weight="1"
					
      			/>
    			</LinearLayout>
    			
    			<LinearLayout
    			android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff">
				
					<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtWeight"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    				<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtLength"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    				<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtWidth"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    				<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtHeight"
	    			android:layout_weight="1"
	   				>
    				</EditText>
    				
				</LinearLayout>
				
				<TextView
					android:id="@+id/lblDescription"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Email Address"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      				/>
	      			<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtDescription" 
	   				android:layout_alignParentTop="true" 
	    			android:layout_toRightOf="@+id/lblDescription"
	    			android:layout_centerHorizontal="true">
    			</EditText>
    			
    			<CheckBox android:id="@+id/check1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Android" />
				<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtInsurance" 
	   				android:layout_alignParentTop="true" 
	    			android:layout_centerHorizontal="true">
	    			</EditText>
				
            	
    </LinearLayout>
    <LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff">
				<TextView
					android:id="@+id/lblService"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Select a Service"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
    			<Spinner android:text="No Services"
            	android:id="@+id/spinner_service"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content">
            	</Spinner>
            	<Button
    			 android:layout_height="wrap_content"
     			 android:layout_width="wrap_content"
     			 android:text="self destruct"
     			 android:onClick="selfDestruct" />
     			 <TextView
					android:id="@+id/lblOr"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="OR"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
            	<TextView
					android:id="@+id/lblCard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Select a Payment Method"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      			/>
    			<Spinner android:text="Select a Credit Card"
            	android:id="@+id/spinner_service"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content">
            	</Spinner>
            	<TextView
					android:id="@+id/lblCcv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="14px"
					android:text="Email Address"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
       				android:layout_centerHorizontal="true"
      				/>
            	<EditText 
					android:layout_height="wrap_content" 
	    			android:layout_width="fill_parent" 
	    			android:textSize="14sp" 
	    			android:id="@+id/txtCcv" 
	   				android:layout_alignParentTop="true" 
	    			android:layout_centerHorizontal="true">
	    			</EditText>
	    			<CheckBox android:id="@+id/check1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Android" />
				<CheckBox android:id="@+id/check1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Android" />
				<CheckBox android:id="@+id/check1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Android" />
				<Button
    			 android:layout_height="wrap_content"
     			 android:layout_width="wrap_content"
     			 android:text="self destruct"
     			 android:onClick="selfDestruct" />
			
	</LinearLayout>
</ViewFlipper>
    

</LinearLayout>