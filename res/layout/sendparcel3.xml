<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ScrollView01" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<RelativeLayout
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">	

  	<TextView android:id="@+id/txt_parceldetails" 
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content" 
				android:text="Parcel Details:" 
				android:textColor="#FFF" 
				android:textStyle="bold" 
				android:textSize="20dip">
	</TextView>

    <TextView 	android:textAppearance="?android:attr/textAppearanceSmall" 
    			android:layout_width="wrap_content" 
    			android:text="The price for this parcel will be confirmed once you have entered parcel details.
Maximum single dimension is 270cm. Maximum weight for the Standard service is 30kg." 
    			android:id="@+id/txt_parcelinfo" 
    			android:layout_height="wrap_content" 
    			android:layout_below="@id/txt_parceldetails">
    </TextView>
    
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium"
    			android:layout_width="wrap_content"  
    			android:text="Description:"
    			android:id="@+id/txt_description" 
    		  	android:layout_height="wrap_content" 
    		  	android:layout_below="@id/txt_parcelinfo">
    </TextView>
    
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="  Weight (kg):" 
    			android:id="@+id/txt_weight" 
    			android:layout_height="wrap_content" 
    			android:layout_toRightOf="@id/txt_description"
    			android:layout_below="@id/txt_parcelinfo">
    </TextView>
    
    <EditText android:id="@+id/description" 
    		  android:layout_height="wrap_content" 
    		  android:layout_width="55dp"
    		  android:layout_below="@id/txt_description">
    </EditText>
    
    <EditText android:id="@+id/weight" 
    		  android:layout_height="wrap_content" 
    		  android:layout_width="55dp"
    		  android:layout_toRightOf="@id/description"
    		  android:layout_below="@id/txt_weight"
    		  android:layout_marginRight="30dp">
    </EditText>
    
