    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="Length (cm)" 
    			android:id="@+id/txt_length" 
    			android:layout_height="wrap_content" 
    			android:layout_below="@id/description">
    </TextView>
    
    <EditText android:id="@+id/length" 
    		  android:layout_height="wrap_content" 
    		  android:layout_width="55dp"
    		  android:layout_below="@id/txt_length"
    		  android:layout_marginRight="30dp">
    </EditText>
    
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="  Width (cm)" 
    			android:id="@+id/txt_width" 
    			android:layout_height="wrap_content" 
    			android:layout_below="@id/description"
    			android:layout_toRightOf="@id/txt_length">
    </TextView>
    
    <EditText android:id="@+id/width" 
    		  android:layout_height="wrap_content" 
    		  android:layout_width="55dp"
    		  android:layout_below="@id/txt_width"
    		  android:layout_toRightOf="@+id/length"
    		  android:layout_marginRight="30dp">
    </EditText>
	
    <TextView 	android:textAppearance="?android:attr/textAppearanceMedium" 
    			android:layout_width="wrap_content" 
    			android:text="  Height (cm)" 
    			android:id="@+id/txt_height" 
    			android:layout_height="wrap_content"
    			android:layout_toRightOf="@id/txt_width" 
    			android:layout_below="@id/description">
    </TextView>
    
    <EditText android:id="@+id/height" 
    		  android:layout_height="wrap_content" 
    		  android:layout_width="55dp"
    		  android:layout_below="@id/txt_height"
    		  android:layout_toRightOf="@id/width"
    		  android:layout_marginRight="30dp">
    </EditText>
    
