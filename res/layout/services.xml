<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent" android:background="#ffffff"
 android:layout_height="fill_parent">
 
 <LinearLayout android:layout_width="fill_parent" 
 android:layout_height="wrap_content" 
 android:orientation="vertical" 
 android:layout_gravity="center">
 
  <TextView android:text="Express - UPS Air Service" 
  android:id="@+id/text1" 
  android:padding="5dip" 
  android:background="#005555"  
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" />
  
  <LinearLayout android:id="@+id/panel1" 
  android:visibility="gone"  
  android:orientation="vertical" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content">
  
   <TextView android:layout_margin="2dip" 
   android:text="Next day delivery by noon throughout most of the UK - guaranteed." 
   android:padding="5dip" 
   android:background="#777777"  
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
   <TextView android:layout_margin="2dip" 
   android:text="Delivery by noon next working day throughout most major cities in Europe." 
   android:padding="5dip" 
   android:background="#777777"  
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
   <TextView android:layout_margin="2dip" 
   android:text="Delivery by noon in major cities in most of the USA and Canada." 
   android:padding="5dip" 
   android:background="#777777"  
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
   <TextView android:layout_margin="2dip" 
   android:text="Rest of World delivery within 1-3 business days." 
   android:padding="5dip" 
   android:background="#777777"  
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
  </LinearLayout>
  
    </LinearLayout>
    
    <LinearLayout android:layout_marginTop="2dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical" 
    android:layout_gravity="center">
    
  <TextView android:text="Express Saver - UPS Air Service" 
  android:id="@+id/text2" 
  android:padding="5dip" 
  android:background="#005555"  
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" />
  
  <LinearLayout android:id="@+id/panel2" 
  android:visibility="gone" 
  android:orientation="vertical" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content">
  
   <TextView android:layout_margin="2dip" 
   android:text="Delivery by end of next working day to most of the UK - guaranteed." 
   android:padding="5dip" 
   android:background="#777777"  
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
   <TextView android:layout_margin="2dip" 
   android:text="Delivery by end of the next working day throughout most of Europe, US and Canada."
    android:padding="5dip"
     android:background="#777777" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" />
      
   <TextView android:layout_margin="2dip"
    android:text="Rest of World Delivery within 1 – 4 working days." 
    android:padding="5dip" 
    android:background="#777777"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" />
    
  </LinearLayout>
  
    </LinearLayout>
    
    <LinearLayout android:layout_marginTop="2dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical" 
    android:layout_gravity="center">
    
  <TextView android:text="Standard - UPS Road Service" 
  android:id="@+id/text3" 
  android:padding="5dip" 
  android:background="#005555"  
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" />
  
  <LinearLayout android:id="@+id/panel3" 
  android:visibility="gone" 
  android:orientation="vertical" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content">
  
   <TextView android:layout_margin="2dip" 
   android:text="UK Delivery by end of next working day- not guaranteed." 
   android:padding="5dip" 
   android:background="#777777" 
    android:layout_width="fill_parent"
     android:layout_height="wrap_content" />
     
   <TextView android:layout_margin="2dip" 
   android:text="Europe delivery in 2 -5 working days – a great service at a competitive price."
    android:padding="5dip" 
    android:background="#777777" 
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content" />
       
  </LinearLayout>
  
    </LinearLayout>
    
    <LinearLayout android:layout_marginTop="2dip"
     android:layout_width="fill_parent"
      android:layout_height="wrap_content" 
      android:orientation="vertical" 
      android:layout_gravity="center">
      
  <TextView android:text="Expedited - UPS Expedited Service" 
  android:id="@+id/text4" 
  android:padding="5dip" 
  android:background="#005555" 
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
  <LinearLayout android:id="@+id/panel4" 
  android:visibility="gone" 
  android:orientation="vertical" 
  android:layout_width="fill_parent"
   android:layout_height="wrap_content">
   
   <TextView android:layout_margin="2dip" 
   android:text="Rest of World delivery in 3-7 business days."
    android:padding="5dip" 
    android:background="#777777" 
     android:layout_width="fill_parent"
      android:layout_height="wrap_content" />
     
  </LinearLayout>
  
    </LinearLayout>
    
    <LinearLayout android:layout_marginTop="2dip"
     android:layout_width="fill_parent" 
     android:layout_height="wrap_content" 
     android:orientation="vertical"
      android:layout_gravity="center">
      
  <TextView android:text="Standard - UK and Northern Ireland Yodel" 
  android:id="@+id/text5" 
  android:padding="5dip" 
  android:background="#005555" 
   android:layout_width="fill_parent" 
   android:layout_height="wrap_content" />
   
  <LinearLayout android:id="@+id/panel5"
   android:visibility="gone"
    android:orientation="vertical"
     android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
   <TextView android:layout_margin="2dip"
    android:text="UK Delivery 1 -3 working days – *collection is made day after order.*" 
    android:padding="5dip" 
    android:background="#777777"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" />
    
   <TextView android:layout_margin="2dip"
    android:text="You can specify am, pm, evening, avoid school run and Saturday delivery options." 
    android:padding="5dip"
     android:background="#777777" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" />
      
  </LinearLayout>
  
    </LinearLayout>
    
 <ListView android:id="@android:id/list" 
 android:layout_width="fill_parent" 
 android:visibility="gone"
  android:layout_height="340dip"  
  android:drawSelectorOnTop="false" 
   android:dividerHeight="0px"/>
   
    <TextView 	android:textAppearance="?android:attr/textAppearanceSmall" 
    			android:layout_width="wrap_content" 
    			android:text="\n There is no insurance on Yodel services. Also, please see weight and dimension restrictions." 
    			android:id="@+id/txt_disclaimer" 
    			android:gravity="center_horizontal"
    			android:layout_height="wrap_content"> 
    </TextView> 
    
    <TextView 	android:textAppearance="?android:attr/textAppearanceSmall" 
    			android:layout_width="wrap_content" 
    			android:text="\n Delivery times are for guidance only and are not guaranteed, unless otherwise stated. Collection times vary according to geographical area.\n\n" 
    			android:id="@+id/txt_disclaimer2" 
    			android:gravity="center_horizontal"
    			android:layout_height="wrap_content"> 
    </TextView> 
   
</LinearLayout>